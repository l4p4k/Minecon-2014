<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.activity_splash"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.minecon.Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.minecon.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.Main" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.minecon.Pictures"
            android:label="@string/title_activity_pics"
            android:parentActivityName="com.minecon.Main"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.minecon.Main" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="com.minecon.Information"
            android:label="@string/title_activity_info"
            android:parentActivityName="com.minecon.Main"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.minecon.Main" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="com.minecon.Maps"
            android:label="@string/title_activity_map"
            android:parentActivityName="com.minecon.Main"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.minecon.Main" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>
    </application>

</manifest>